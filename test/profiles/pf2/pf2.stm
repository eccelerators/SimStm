--  example stimulus file
MESSAGES_ON

DEFINE_VAR DATA   -20
DEFINE_VAR ADDR1  4
DEFINE_VAR ADDR2  5
DEFINE_VAR CNT 0
DEFINE_VAR CNT1 0
DEFINE_VAR CNT2 0
DEFINE_VAR CNT3 0
DEFINE_VAR CNT4 0
DEFINE_VAR CNT5 0
DEFINE_VAR CNT6 0

RESET_SYS

WHILE $DATA < 20
  --MESSAGES_ON
  WRITE_DUT $ADDR1 $DATA  "  Write  addr: $ADDR1  with data: $DATA
  --MESSAGES_OFF
  READ_PINS 0
  VERIFY $DATA
  ADD_VAR DATA 1

  WRITE_DUT $ADDR2 $DATA
  READ_PINS 1
  VERIFY $DATA
  ADD_VAR DATA 1
  CALL $CL1
END_WHILE

FINISH

