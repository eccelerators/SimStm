--------------------------------------------
--  Purpose:   confirm numbers max and min
--             integers correctly obtained
--             from stimulus and displayed
---------------------------------------------

--MESSAGES_ON
DEFINE_VAR VAR1 0

DEFINE_VAR MIN -2147483648
DEFINE_VAR MAX 2147483647

SHOW_BIN "1Show BINARY:  $MIN
SHOW_DEC "2Show Decimal: $MIN
SHOW_HEX "3Show Hex:     $MIN
SHOW_BIN "4Show BINARY:  $MAX
SHOW_DEC "5Show Decimal: $MAX
SHOW_HEX "6Show Hex:     $MAX

READ_VAR MIN          "READ MIN: $MIN
READ_VAR MAX          "READ MAX: $MAX

ADD_VAR VAR1 -2147483648
READ_VAR VAR1            "READ VAR1: $VAR1
VERIFY -2147483648       "Verify: $VAR1

ADD_VAR VAR1 2147483647
READ_VAR VAR1   "VAR1: $VAR1
VERIFY -1       "VAR1: $VAR1

EQU_VAR VAR1 $MIN   "VAR1: $VAR1
ADD_VAR VAR1 32     "VAR1: $VAR1


EQU_VAR VAR1 b11111111111111111111111111111111   "Binary VAR1: $VAR1
SHOW_BIN "7Show Binary VAR1: $VAR1
SHOW_DEC "7Is Integer: $VAR1
READ_VAR VAR1
VERIFY -1

EQU_VAR VAR1 b10000000000000000000000000000000   "Binary VAR1: $VAR1
SHOW_BIN "8Show Binary VAR1: $VAR1
SHOW_DEC "9Is Integer: $VAR1
READ_VAR VAR1
VERIFY $MIN

EQU_VAR VAR1 b1111111111111111111111111111111   "Binary VAR1: $VAR1
SHOW_BIN "10Show Binary VAR1: $VAR1
SHOW_DEC "11Is Integer: $VAR1
READ_VAR VAR1
VERIFY $MAX

EQU_VAR VAR1 xffffffff   "Hex ffffffff VAR1: $VAR1
SHOW_HEX "12Show Hex VAR1: $VAR1
SHOW_DEC "13Is Integer: $VAR1
READ_VAR VAR1
VERIFY -1

EQU_VAR VAR1 x80000000   "Hex 80000000 VAR1: $VAR1
SHOW_HEX "14Show Hex VAR1: $VAR1
SHOW_DEC "15Is Integer: $VAR1
READ_VAR VAR1
VERIFY $MIN

EQU_VAR VAR1 x7fffffff   "Hex 7ffffff  VAR1: $VAR1
SHOW_HEX "16Show Hex VAR1: $VAR1
SHOW_DEC "16Is Integer: $VAR1
READ_VAR VAR1
VERIFY $MAX

EQU_VAR VAR1 x10
DEFINE_VAR VAR2 0

ADD_VAR VAR2 x01
READ_VAR VAR2
SHOW_BIN "$VAR2
--  walking ones
EQU_VAR VAR1 1
LOOP 30
  ADD_VAR VAR2 $VAR2
  READ_VAR VAR2
  SHOW_BIN "Bin: $VAR2
  SHOW_HEX "Hex: $VAR2
  SHOW_DEC "Dec: $VAR2
  ADD_VAR VAR1 1
END_LOOP

EQU_VAR VAR2 x7fffffff
SHOW_BIN "max pos $VAR2
SHOW_HEX "max pos $VAR2
SHOW_DEC "max pos $VAR2

EQU_VAR VAR1 x00
SUB_VAR VAR1 x7fffffff
SHOW_DEC "zero - max $VAR1
SHOW_BIN "zero - max $VAR1
READ_VAR VAR1
VERIFY x80000001
SUB_VAR VAR1 1
READ_VAR VAR1
VERIFY x80000000

SUB_VAR VAR2 x0000001
READ_VAR VAR2
VERIFY x7ffffffe
SHOW_DEC "$VAR2
SHOW_BIN "$VAR2


EQU_VAR VAR1 x80000000
SHOW_DEC "$VAR1
EQU_VAR VAR2 1
ADD_VAR VAR1 $VAR2
SHOW_BIN "min + 1 $VAR1
SHOW_DEC "min + 1 $VAR1

FINISH
